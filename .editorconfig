# top-most EditorConfig file
root = true

# Applies to all files
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 80
charset = utf-8

# Config for YAML files
[{*.yml,*.yaml}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Config for Python
[*.py]
indent_style = space
indent_size = 4
max_line_length = 79  # pep-0008

# Config for Terraform
[*.{tf,tfvars}]
indent_size = 2
indent_style = space

# Config for Markdown
[*.md]
max_line_length = 0
trim_trailing_whitespace = false

# Config for JSON
[*.json]
indent_style = space
indent_size = 2

# Config for JS
[*.js]
indent_style = space
indent_size = 2

# Config for Jenkins Files
[Jenkinsfile]
indent_style = space
indent_size = 2
